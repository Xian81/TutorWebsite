@model Tutors.Data.Subject

@{
    ViewBag.Title = "Edit";
}

<h2>Edittwo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Subjects</h4>
