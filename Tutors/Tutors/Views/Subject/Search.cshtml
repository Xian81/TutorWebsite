@model List<Tutors.Data.View_Model.TutorViewModel>

<div class="container">
    <h2>Search</h2>
    <div class="panel panel-info">
        <div class="panel-heading">How to search</div>
        <div class="panel-body">Search for tutors by subject, location, level and age range</div>
    </div>
</div>

<div class="container">


    @using (Html.BeginForm("SearchSubjects", "Subject"))
    {
        <center>@Html.TextBox("Search", null , new { @class = "form-control" })</center>
        <br />
        <input type="submit" class="btn btn-primary btn-block" value="search" />
        <br />
    }

    @if (Request.HttpMethod == "POST")
    {

            <table class="table" id="resultsgrid">

                <tr>
                 
                    <th>
                    Name
                    </th>
                    <th>
                    Age Range
                    </th>
                    <th>
                    Location
                    </th>
                    <th>
                    Level 
                    </th>
                    <th>
                    Subject 
                    </th>
                    <th>Book Lesson</th>

                </tr>


                @foreach (var item in Model)
                {
                <tr>
                 
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AgeRange)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    <td>
                        <a class="btn-btn-primary" href="@Url.Action("Details", "Bookings", new { id = @item.TutorID })">
                        <button type="button" class="btn btn-primary">View Profile</button>
                        </a>
                    </td>

                </tr>

                }

             </table>
     }

</div>


